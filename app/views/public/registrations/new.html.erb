<div class="row justify-content-center">
  <div class="col-3 bg-dark rounded-pill d-flex justify-content-center pt-2 mt-5">
    <%= image_tag 'motilog.png', size: "150x70" %>
  </div>
</div>

<div class="row mt-5 ml-5">
  <div class="col-3 font-weight-bold bg-secondary text-light text-center">
    <h4 class="mt-2 mb-2" style="text-decoration:underline;">
      アカウント作成
    </h4>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-6">
    <div class="row justify-content-center mt-3">
      <%= form_with model: @user, url: signup_path do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <div class="row justify-content-between mt-2">
        <div class="field">
          <%= f.label :名前 %>
        </div>
        <div class="field">
          <%= f.text_field :name, autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <div class="row justify-content-between mt-2">
        <div class="field">
          <%= f.label :メールアドレス %>
        </div>
        <div class="field">
          <%= f.email_field :email, autocomplete: "email" %>
        </div>
      </div>

      <div class="row justify-content-between mt-2">
        <div class="field">
          <%= f.label :パスワード %>
        </div>
        <div>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="row justify-content-between mt-2">
        <div class="field">
          <%= f.label :パスワード（確認用） %>
        </div>
        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="row d-flex justify-content-center">
        <div class="actions mt-2">
          <%= f.submit "登録", class: "btn btn-primary" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="row d-flex justify-content-center mt-5">
  <div class="col-6 mt-1 d-flex">
    <p class="text-center">アカウントをお持ちの場合　</p>
    <%= link_to 'ログイン', root_path, class: "btn btn-primary" %>
  </div>
</div>