<!--%= link_to new_user_instrument_log_path(user_id: @instrument.user_id, instrument_id: @instrument.id) do %>-->
<!-- ログを投稿-->
<!--% end %>-->

  </div>
  </div>


<% if @logs.present? %>
  <% @logs.each do |log| %>
      <%= link_to edit_user_instrument_log_path(user_id: log.instrument.user_id, instrument_id: log.instrument.id, id: log.id) do %>
          <%= log.date %>
          <%= log.log %>
     <% end %>
  <% end %>
  <% else %>
  ログはありません
<% end %>

</div>