<div class='row mt-5 ml-5'>
  <div class="col-3 font-weight-bold bg-secondary text-light text-center">
    <h3 class="mt-2 mb-2" style="text-decoration:underline;">楽器情報を編集</h3>
  </div>
</div>

<div class='row mt-5'>
  <div class="mx-auto">
  <%= form_with model: @instrument, url: user_instrument_path, local: true do |f| %>
    <%= render 'layouts/errors', obj: @instrument %>

    <div class="form-group">
      <%= f.label :楽器の写真 %>
      <%= f.file_field :instrument_image, class: "form-control-file user_image", accept: 'image/*' %>
    </div>
    <div class="form-group">
      <%= f.label :楽器の名前 %>
      <%= f.text_field :name, class: "form-control name" %>
    </div>
    <div class="form-group">
      <%= f.label :楽器のプロフィール %>
      <%= f.text_area :profile, class: "form-control introduction" %>
    </div>
    <div class="form-group">
      <%= f.submit :編集,class: 'btn btn-secondary' %>
    </div>
  <% end %>
　</div>
</div>

<div class='row'>
  <div class="ml-auto">
    <%= button_to '削除', user_path(user_id: current_user.id, id: params[:id]), method: :delete, data: {confirm: "削除しますか？"}, method: :get, class: "btn btn-danger" %>
  </div>
</div>