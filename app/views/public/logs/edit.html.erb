<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <%= form_with model: @log, url: user_instrument_log_path, method: :patch, local: true do |f| %>
      <%= render 'layouts/errors', obj: @log %>
      <div class="form-group">
        <%= f.label :date %>
        <%= f.date_field :date, class: "form-control-file user_image", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label :log %>
        <%= f.text_field :log, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-secondary' %>
      </div>
    <% end %>
      <div class="form-group">
          <%= link_to user_instrument_log_path(user_id: current_user.id, instrument_id: params[:instrument_id], id: params[:id]), method: :delete, data: {confirm: "削除しますか？"} do %>
          ログを削除
          <% end %>
      </div>
  </div>
</div