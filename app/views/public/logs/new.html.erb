<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <%= form_with model: @maintenance_log, url: maintenance_logs_path, method: :post, local: true do |f| %>
      <%= render 'layouts/errors', obj: @maintenance_log %>

      <div class="form-group">
        <%= f.label :date %>
        <%= f.date_field :date, class: "form-control-file user_image", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label :log %>
        <%= f.text_field :log, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div