<div class='row mt-5 ml-5'>
  <div class="col-3 font-weight-bold bg-secondary text-light text-center">
    <h3 class="mt-2 mb-2" style="text-decoration:underline;">プロフィール編集</h3>
  </div>
</div>

<div class='row mt-5'>
    <div class="col-6 mx-auto">
    <%= form_with model:@user, local:true do |f| %>
      <%= render 'shared/errors', obj: @user %>
      <div class="form-group">
        <%= f.label :プロフィール画像 %>
        <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label :ユーザーネーム %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :プロフィール %>
        <%= f.text_area :profile, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.label :目標（画面上部に表示されます） %>
        <%= f.text_area :goal, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit :編集,class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>

<div class='row'>
  <div class="ml-auto">
    <%= button_to '退会する', user_cancel_path(@user), method: :get, class: "btn btn-danger" %>
  </div>
</div>