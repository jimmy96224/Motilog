<div class="row mt-3">
  <div class="col-10 mx-auto">
    <h2>ユーザー一覧</h2>
    
    <table class="table table-hover">
        <thead>
          <tr>
          <th></th>
          <th>ユーザー名</th>
          <th>登録日</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
          </tr>
        </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to admin_user_path(id: user.id) do%>
              <%= image_tag user.get_profile_image(50,50) %>
            <% end %>
          </td>
          <td>
            <%= link_to admin_user_path(id: user.id) do%>
              <%= user.name %>
            <% end %>
          </td>
          <td>
            <%= user.created_at.strftime("%-m月%-d日") %>
          </td>
          <td>
            <%= user.email %>
          </td>
          <td>
            <% if user.is_active %>
              <div class="text-success font-weight-bold">有効</div>
            <% else %>
              <div class="text-muted font-weight-bold">退会</div>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    
  </div>
</div>